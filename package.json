{
  "name": "dg-sample-front",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext js,jsx,mjs --ignore-path .gitignore --fix .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack:build": "webpack --config-register esm",
    "webpack:watch": "webpack-dev-server --config-register esm",
    "build": "cross-dotenv docker-compose build",
    "start": "cross-dotenv docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medfreeman/dg-sample-front.git"
  },
  "author": "Mehdi Lahlou <mlahlou@protonmail.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medfreeman/dg-sample-front/issues"
  },
  "homepage": "https://github.com/medfreeman/dg-sample-front#readme",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "cross-dotenv": "^1.0.4",
    "dotenv": "^6.1.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-i-am-meticulous": "^11.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "esm": "^3.0.84",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": "last 2 versions, > 5%"
          },
          "modules": false
        }
      ],
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "globalReturn": false,
        "jsx": true
      }
    },
    "env": {
      "node": false,
      "browser": true,
      "es6": true
    },
    "globals": {
      "process": false
    },
    "extends": [
      "airbnb",
      "i-am-meticulous/react",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "babel",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true,
          "browser": false
        },
        "rules": {
          "import/no-extraneous-dependencies": [
            "error",
            {
              "devDependencies": true
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "parser": "babylon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.mjs": [
      "eslint --ext js,jsx,mjs --fix",
      "git add"
    ]
  }
}
